{
    "name": "jfcherng/php-aacodec",
    "description": "Encode/decode JavaScript to/from Japanese style emoticons.",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrey Izman",
            "email": "izmanw@gmail.com"
        },
        {
            "name": "Jack Cherng",
            "email": "jfcherng@gmail.com"
        }
    ],
    "keywords": [
        "codec",
        "encoder",
        "decoder",
        "aaencode",
        "aadecode",
        "aaencoder",
        "aadecoder",
        "javascript"
    ],
    "minimum-stability": "beta",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Jfcherng\\AaCodec\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phan/phan": "^2 || ^3",
        "phpunit/phpunit": "^7.2 || ^8 || ^9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "platform": {
            "php": "7.1.3"
        },
        "sort-packages": true
    },
    "scripts": {
        "analyze": [
            "phan --color",
            "phpcs --colors -n"
        ],
        "fix": [
            "php-cs-fixer fix --verbose"
        ],
        "test": [
            "phpunit --verbose"
        ]
    }
}
